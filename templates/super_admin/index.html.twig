{% extends 'base.html.twig' %}

{% block title %}Hello SuperAdminController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1>Liste Des Utilisateurs</h1>
            <p class="text-right"><a href="{{ url('super_admin.form') }}" class="btn btn-info">Ajouter produit</a></p>
            <table class="table table-dark mt-5">
                <thead class="thead-dark">
                    <th>ID</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Mot de passe</th>
                    <th>Actions</th>
                </thead>
                {% for user in results %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles[0] }}</td>
                        <td>{{ user.password }}</td>
                        <td>
                        <p><a href="{{ url('super_admin.update', {id: user.id}) }}" class="btn btn-sm btn-secondary">Modifier</a></p>
                        <p><a href="{{ url('super_admin.delete', {id: user.id}) }}" class="btn btn-sm btn-danger">Delete</a></p>    
                        </td>
                    </tr>
                    {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
